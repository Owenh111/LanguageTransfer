   <Label fx:id="instructionLabel" layoutX="40" layoutY="40" style="-fx-font-size: 50px;" wrapText="true" />

   <MediaView fx:id="mediaView" fitHeight="200" fitWidth="200" layoutX="40" layoutY="240" />

   <Label fx:id="feedbackLabel" layoutX="40.0" layoutY="368.0" style="-fx-font-size: 60px;" text="visibility test" wrapText="true" />

   <Button fx:id="accentedAButton" layoutX="40.0" layoutY="447.0" text="à" visible="false" />
   <Button fx:id="accentedEButton" layoutX="101.0" layoutY="447.0" text="è" visible="false" />
   <Button fx:id="accentedIButton" layoutX="163.0" layoutY="447.0" text="ì" visible="false" />
   <Button fx:id="accentedOButton" layoutX="221.0" layoutY="447.0" text="ò" visible="false" />
